<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Добавить заказ</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-3">
    <h1>Добавить заказ</h1>
    <a href="/orders" class="btn btn-secondary mb-3">Назад к заказам</a>
    <form action="/add/orders" method="POST">
      <div class="mb-3">
        <label for="user_id" class="form-label">Пользователь</label>
        <select id="user_id" name="user_id" class="form-select" required>
          <option value="" disabled selected>Выберите пользователя</option>
          <% users.forEach(user => { %>
            <option value="<%= user.id %>"><%= user.name %></option>
          <% }); %>
        </select>
      </div>
      <div class="mb-3">  
        <label for="product_id" class="form-label">Продукт</label>
        <select id="product_id" name="product_id" class="form-select" required>
          <option value="" disabled selected>Выберите продукт</option>
          <% products.forEach(product => { %>
            <option value="<%= product.id %>"><%= product.name %> - <%= product.price.toFixed(2) %> MDL</option>
          <% }); %>
        </select>
      </div>
      <div class="mb-3">
        <label for="quantity" class="form-label">Количество</label>
        <input type="number" id="quantity" name="quantity" class="form-control" min="1" required>
      </div>
      <button type="submit" class="btn btn-primary">Добавить заказ</button>
    </form>
  </div>
</body>
</html>
