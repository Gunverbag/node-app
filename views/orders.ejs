<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Заказы</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-3">
    <h1>Список заказов</h1>
    <div class="d-flex justify-content-between mb-3">
      <a href="/" class="btn btn-primary">На главный экран</a>
      <a href="/add/orders" class="btn btn-success">Добавить заказ</a>
    </div>
    <% users.forEach(user => { %>
      <div class="card mb-4">
        <div class="card-header">
          <h2><%= user.name %></h2>
        </div>
        <div class="card-body">
          <h5>Список продуктов:</h5>
          <table class="table">
            <thead>
              <tr>
                <th>Название продукта</th>
                <th>Цена за единицу</th>
                <th>Количество</th>
                <th>Общая стоимость</th>
                <th>Удалить</th>
              </tr>
            </thead>
            <tbody>
              <% user.orders.forEach(order => { %>
                <tr>
                  <td><%= order.productName %></td>
                  <td><%= order.productPrice.toFixed(2) %> MDL</td>
                  <td><%= order.quantity %></td>
                  <td><%= (order.productPrice * order.quantity).toFixed(2) %> MDL</td>
                  <td>
                    <form action="/delete/order/<%= order.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Вы уверены, что хотите удалить этот заказ?')">
                        <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                      </form>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
          <h5 class="text-end">Общая стоимость: <strong><%= user.totalPrice.toFixed(2) %> MDL</strong></h5>
        </div>
      </div>
    <% }); %>
  </div>
</body>
</html>
